.board.user-profile
	.avatar-col
		.avatar-wrapper
			img(v-lazy="avatar")
	.user-info-wrapper
		.row-board
			.user-name {{ fullName }}
				i.device.hc(v-if="deviceType", :class="'hc-' + deviceType")
			.btn-control-wrapper
				button.btn-icon-circle(type="button")
					i.hc.hc-pluse
				button.btn-icon-circle(type="button")
					i.hc.hc-doc-edit
				button.btn-icon-circle(type="button")
					i.hc.hc-option-dots
		.row-board.user-first-info 
			span {{ age }} лет
			span {{ zodiac }}
			span {{ country + ', ' + city }}
		
		.row-board.user-preference(v-if="lookingFor")
			.key Я ищу:
			.value
				span(v-for="(item, index) in lookingFor", :key="index") {{ item }}

		.row-board.user-purposes(v-if="purposes")
			.key Намерения:
			.value
				span(v-for="(item, index) in purposes", :key="index") {{ item }}

		.row-board.user-actions.justify-content-between
			button(type="button").btn-link
				i.hc.hc-chat-edit
				span Cообщение
			button(type="button").btn-link
				i.hc.hc-divan
				span Обмен фото
			button(type="button").btn-link
				i.hc.hc-crossed-out-heart
				span Проявить симпатию